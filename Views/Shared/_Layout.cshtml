@using CashLad.Data
@using CashLad
@{
    var user = Context.Session.GetObject<User>("User");
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CashLad</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="icon" type="image/x-icon" href="/images/Logo.svg">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300&family=Roboto+Mono:ital,wght@0,100;1,100&display=swap" rel="stylesheet">

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/js/bootstrap.min.js"></script>
</head>
<body style="background-color: #ECEFF2">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow" style="background-color:darkblue">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CashLad</a>
                <ul class="nav flex-grow-1">
                    @if (user == null)
                    {
                        <li class="nav-item ms-auto">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Login"><i class="fa-solid fa-user"></i></a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-auto">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Logout"><i class="fa-solid fa-user"></i></a>
                        </li>
                        <li class="dropdown">
                            <a class="text-light nav-link my-auto" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fa-solid fa-ellipsis"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton1">
                                <li><a class="dropdown-item" asp-action="Logout">Logout</a></li>
                                <li><a class="dropdown-item" href="#">Another action</a></li>
                                <li><a class="dropdown-item" href="#">Something else here</a></li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </nav>

        <div class="bg-white shaded-shadow-lg py-2 mb-3">
            <ul class="nav navbar-dark container justify-content-center">
                @if (user != null)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="#">Spending</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="#">Subscriptions</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" href="#">How We Operate</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Extra Information</a>
                    </li>
                }
            </ul>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - CashLad - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
